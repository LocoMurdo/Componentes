<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
	<persistence-unit name="ProjectJPA" transaction-type="RESOURCE_LOCAL">
		<class>Entity.Usuarios</class>
		<class>Entity.Empleados</class>
		<class>Entity.Proyectos</class>
		<class>Entity.Experencia_Laboral</class>
		<class>Entity.Asignaciones</class>
		<class>Entity.Vacaciones</class>
		<class>Entity.EmpleadoProyecto</class>
		<class>Entity.Comentario</class>
		<properties>
			<property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/GestorDeProyectos"/>
			<property name="javax.persistence.jdbc.user" value="root"/>
			<property name="javax.persistence.jdbc.password" value="root"/>
            <property name="javax.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
			<property name="hibernate.hbm2ddl.auto" value="update" />
			<property name="hibernate.hbm2ddl.auto" value="create" />

 <property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect" />
		</properties>
	</persistence-unit>
</persistence>
